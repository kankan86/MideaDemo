<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8.0dip" />

            <gradient
                android:angle="270.0"
                android:endColor="#7f71716d"
                android:centerColor="#bfb9b9b9"
                android:startColor="#7f71716d" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8.0dip" />

                <gradient
                    android:angle="270.0"
                    android:centerColor="#77B4DD"
                    android:endColor="#69ADDA"
                    android:startColor="#4E9ED3" />
            </shape>
        </clip>
    </item>

</layer-list>